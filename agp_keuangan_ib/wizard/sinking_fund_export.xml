<odoo>
    <data>

        <!-- Form view for Sinkingfund Export Wizard -->
        <record id="view_sinking_fund_export_wizard" model="ir.ui.view">
            <field name="name">sinking.fund.export.wizard.form</field>
            <field name="model">sinking.fund.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Export Sinking Fund">
                    <group>
                        <!-- Field untuk memilih tipe transaksi -->
                        <field name="tipe_notes" string="Tipe"/>
                    </group>
                    <footer>
                        <button string="View" type="object" name="action_preview" class="btn-primary"/>
                        <button string="Export to Excel" type="object" name="action_export" class="btn-primary"/>
                        <button string="Export to PDF" type="object" name="action_print_pdf" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_open_export_sinking_wizard" model="ir.actions.act_window">
            <field name="name">Export</field>
            <field name="res_model">sinking.fund.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
