            <field name="name">Training Course: HR User - Block Delete if Completed</field>
            <field name="model_id" ref="model_training_course"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('state', '=', 'completed')]</field>
        </record>
        <record id="rule_training_course_hr_manager_allow_actions" model="ir.rule">
            <field name="name">Training Course: HR Manager - Allow All Actions</field>
            <field name="model_id" ref="model_training_course"/>
