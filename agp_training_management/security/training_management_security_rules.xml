<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="rule_tna_submission_user_own_draft_actions" model="ir.rule">
            <field name="name">TNA Submission: User (Kadiv/GM) - Own Draft (Write/Unlink)</field>
            <field name="model_id" ref="model_tna_submission"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="0"/> <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/> <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('user_id','=',user.id), ('state','=','draft')]</field>
        </record>
