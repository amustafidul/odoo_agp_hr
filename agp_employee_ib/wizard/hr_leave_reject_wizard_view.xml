<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hr_leave_reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.leave.reject.wizard.form</field>
        <field name="model">hr.leave.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Leave">
                <group>
                    <field name="reason" placeholder="Enter reason for rejection"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Reject" type="object" name="action_reject_leave" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>