<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_employee_unit_penempatan_cabang_tree_view" model="ir.ui.view">
        <field name="name">hr.employee.unit.penempatan.cabang.view.tree</field>
        <field name="model">hr.employee.unit.penempatan.cabang</field>
        <field name="arch" type="xml">
            <tree string="Cabang (Organik &amp; PKWT)">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_unit_penempatan_cabang_form_view" model="ir.ui.view">
        <field name="name">hr.employee.unit.penempatan.cabang.view.form</field>
        <field name="model">hr.employee.unit.penempatan.cabang</field>
        <field name="arch" type="xml">
            <form string="Cabang (Organik &amp; PKWT)">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_employee_unit_penempatan_cabang_action" model="ir.actions.act_window">
        <field name="name">Cabang (Organik &amp; PKWT)</field>
        <field name="res_model">hr.employee.unit.penempatan.cabang</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat master data cabang (Organik &amp; PKWT) baru
            </p>
        </field>
    </record>
</odoo>