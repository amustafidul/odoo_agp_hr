<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_employee_status_pajak_tree_view" model="ir.ui.view">
        <field name="name">hr.employee.status.pajak.view.tree</field>
        <field name="model">hr.employee.status.pajak</field>
        <field name="arch" type="xml">
            <tree string="Status Pajak">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_status_pajak_form_view" model="ir.ui.view">
        <field name="name">hr.employee.status.pajak.view.form</field>
        <field name="model">hr.employee.status.pajak</field>
        <field name="arch" type="xml">
            <form string="Status Pajak">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_employee_status_pajak_action" model="ir.actions.act_window">
        <field name="name">Status Pajak</field>
        <field name="res_model">hr.employee.status.pajak</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat master data status pajak baru
            </p>
        </field>
    </record>
</odoo>