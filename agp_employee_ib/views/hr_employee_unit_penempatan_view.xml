<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_employee_unit_penempatan_tree_view" model="ir.ui.view">
        <field name="name">hr.employee.unit.penempatan.view.tree</field>
        <field name="model">hr.employee.unit.penempatan</field>
        <field name="arch" type="xml">
            <tree string="Unit Penempatan">
                <field name="name"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_unit_penempatan_form_view" model="ir.ui.view">
        <field name="name">hr.employee.unit.penempatan.view.form</field>
        <field name="model">hr.employee.unit.penempatan</field>
        <field name="arch" type="xml">
            <form string="Unit Penempatan">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="phone_number"/>
                            <field name="fax"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_employee_unit_penempatan_action" model="ir.actions.act_window">
        <field name="name">Unit Penempatan</field>
        <field name="res_model">hr.employee.unit.penempatan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat master data unit penempatan baru
            </p>
        </field>
    </record>
</odoo>