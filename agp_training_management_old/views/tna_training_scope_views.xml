<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tna_training_scope_tree" model="ir.ui.view">
        <field name="name">tna.training.scope.tree</field>
        <field name="model">tna.training.scope</field>
        <field name="arch" type="xml">
            <tree string="Lingkup Diklat">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_tna_training_scope_form" model="ir.ui.view">
        <field name="name">tna.training.scope.form</field>
        <field name="model">tna.training.scope</field>
        <field name="arch" type="xml">
            <form string="Lingkup Diklat">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tna_training_scope" model="ir.actions.act_window">
        <field name="name">Lingkup Diklat</field>
        <field name="res_model">tna.training.scope</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada Lingkup Diklat yang dibuat.
            </p>
        </field>
    </record>
</odoo>