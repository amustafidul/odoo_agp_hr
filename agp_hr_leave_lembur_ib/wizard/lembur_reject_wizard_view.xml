<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_lembur_reject_wizard_form" model="ir.ui.view">
        <field name="name">lembur.reject.wizard.form</field>
        <field name="model">lembur.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject">
                <group>
                    <field name="reason" placeholder="Enter reason for rejection"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Reject" type="object" name="action_reject" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>