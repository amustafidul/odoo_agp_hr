    <record id="view_rkap_konsolidasi_tree" model="ir.ui.view">
        <field name="name">rkap.konsolidasi.tree</field>
        <field name="model">account.keuangan.rkap.konsolidasi</field>
        <field name="arch" type="xml">
            <!-- <tree string="Konsolidasi RKAP Semua Cabang" create="0" attrs="{'js_class': 'button_account_keuangan_rkap_konsolidasi_list'}"> -->
