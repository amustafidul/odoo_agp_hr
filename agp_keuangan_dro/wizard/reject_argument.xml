<odoo>
    <data>

        <!-- # === WIZARD KKHC === # -->
        <record id="kkhc_reject_wizard_form" model="ir.ui.view">
            <field name="name">kkhc.reject.wizard.form</field>
            <field name="model">kkhc.reject.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="reject_reason"/>
                    </group>
                    <footer>
                        <button string="Simpan" name="ok" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_reject_wizard_kkhc" model="ir.actions.act_window">
            <field name="name">Alasan Reject KKHC</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kkhc.reject.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

