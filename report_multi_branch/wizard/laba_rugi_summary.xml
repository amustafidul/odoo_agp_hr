<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="laba_rugi_summary_mb0" model="account.financial.report">
            <field name="name">Laba Rugi Summary Multi Branch</field>
            <field name="type">sum</field>
        </record>
        <record model="financial.param" id="data_laba_rugi_summary_financial_param">
            <field name="name">Laba Rugi Summary</field>
        </record>
    </data>

    <record id="laba_rugi_summary_mb_view" model="ir.ui.view">
        <field name="name">Laba Rugi Summary</field>
        <field name="model">laba_rugi.summary.mb.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="account_report_id" invisible="1"/>
                    <field name="financial_param_id" invisible="1"/>
                    <field name="periode"/>
                </group>
                <footer>
                    <button name="action_view" string="View" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button name="check_report_laba_rugi" string="Print" type="object" default_focus="1" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_laba_rugi_summary_mb" model="ir.actions.act_window">
        <field name="name">Laba Rugi Summary</field>
        <field name="res_model">laba_rugi.summary.mb.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="laba_rugi_summary_mb_view"/>
        <field name="target">new</field>
        <field name="context" eval="{
            'default_account_report_id':ref('report_multi_branch.laba_rugi_summary_mb0'),
            'default_financial_param_id':ref('report_multi_branch.data_laba_rugi_summary_financial_param'),
        }"/>
    </record>

    <menuitem id="menu_laba_rugi_summary_mb" name="Laba Rugi Summary" sequence="20" action="action_laba_rugi_summary_mb" parent="accounting_pdf_reports.menu_finance_legal_statement" groups="account.group_account_manager"/>

</odoo>
