<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_payroll_simulation_form" model="ir.ui.view">
        <field name="name">payroll.simulation.form</field>
        <field name="model">payroll.simulation</field>
        <field name="arch" type="xml">
            <form string="Simulasi Pembayaran">
                <group>
                    <group>
                        <field name="employee_id" />
                        <field name="basic_salary_amount" />
                        <field name="tunjangan_posisi_amount" />
                        <field name="overtime_amount" />
                    </group>
                    <group>
                        <field name="bpjs_jht_amount" />
                        <field name="pph_21_amount" />
                        <field name="nett_salary_amount" />
                    </group>
                </group>
                <footer>
                    <button string="Tutup" special="cancel" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>